{
    "compilerOptions": {
        "outDir": "./build/",
        "module": "es6",
        "moduleResolution": "node",
        "target": "es5",
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "lib": [
            "es2015",
            "dom",
            "ES5",
            "ES6",
            "DOM.Iterable",
            "ES2015.Iterable"
        ],
        "baseUrl": "src",
        "paths": {
            "@/*": [
                "*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "build"
    ]
}